{
  on pattern() {	
    post (S 0 1)
    post (C 0 0)
  }
  on pattern((S pos1 pos2))
    delay #
      if equal(pos2, 100) 
        pass
	post (s pos2 (sum pos2 1) )
      
  on pattern((C x 0)(S x y)) 
    delay #0
       post (C y 1)
  on pattern((C x 1)(S x y)) 
    delay #0
       post (C y 0);
  on pattern((C a b))
    delay #0
       post (COUT concat("(C POS_" tostring(a) " *CHAR_" tostring(b) ")\n"))
  on pattern((S a b))
    delay #0
       post (COUT concat("(S POS_" tostring(a) " *POS_" tostring(b) ")\n"));
}
